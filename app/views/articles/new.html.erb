<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well">
                
                <h1>New Article</h1>
                
                <%= form_for :article, url: articles_path do |t| %>
                    <p>
                        <%= t.label :title %><br>
                        <%= t.text_field :title %>
                    </p>
                    <p>
                        <%= t.label :text %><br>
                        <%= t.text_area :text %>
                    </p>
                    <p>
                        <%= t.submit %>
                    </p>
                <% end %>
            </div>
        </div>
    </div>
</div>